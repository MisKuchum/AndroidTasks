<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="@dimen/friend_item_iv_photo_width"
        android:layout_height="@dimen/friend_item_iv_photo_height"
        android:src="@drawable/photo_template" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/friend_item_tv_name_text"
        android:textSize="@dimen/header2_size"
        android:gravity="center"
        android:layout_gravity="center"
        android:paddingHorizontal="@dimen/padding_size" />

</LinearLayout>